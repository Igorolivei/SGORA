              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="listaDeAnimais" prefHeight="380.0" prefWidth="511.0">
                          <columns>
                            <TableColumn fx:id="tabelaNomeAnimal" prefWidth="260.0" text="Nome do Animal" />
                            <TableColumn fx:id="tabelaQuantidadeAnimal" prefWidth="250.0" text="Quantidade" />
                          </columns>
                        </TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
    </children>
</AnchorPane>
