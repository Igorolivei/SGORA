                        <Label layoutX="40.0" layoutY="109.0" prefHeight="21.0" prefWidth="55.0" text="Espécie:" />
                        <Label layoutX="41.0" layoutY="150.0" prefHeight="18.0" prefWidth="40.0" text="Sexo:" />
                        <TextField fx:id="campoEspecie" layoutX="113.0" layoutY="107.0" prefHeight="25.0" prefWidth="218.0" />
                        <RadioButton fx:id="radioMacho" layoutX="113.0" layoutY="151.0" mnemonicParsing="false" selected="true" text="Macho">
